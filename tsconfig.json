{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src", // import 기본 경로
		"paths": {
				// src 하위 디렉토리에 맞춰서 경로 설정
				//"@Types/*": ["@Types/*"],
        "styles/*": ["styles/*"],
	      //"apis/*": ["apis/*"],
	      "assets/*": ["assets/*"],
	      "components/*": ["components/*"],
	      //"layouts/*": ["layouts/*"],
	      "pages/*": ["pages/*"],
	      "routes/*": ["routes/*"],
	      //"store/*": ["store/*"]
				// ....

				// 추가되는 디렉토리가 있다면 위 규칙에 맞춰 추가할 것
		}
  },
  "include": [
    "src"
  ]
}
